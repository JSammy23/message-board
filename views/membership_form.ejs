<h1><%= title %></h1>

<% if (currentUser) { %>

    <% if (currentUser.membership_status === 'member') { %>
        <p>You're already a member of the Hub. Enjoy your exclusive content!</p>
        
    <% } else { %>
        <p>Now that you have an account please enter the secret password to have exclusive membership to the Hub.</p>

        <form action="" method="post">
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit & Join</button>
            </div>
        </form>

    <% } %>

<% } else { %>
    <p>The area is reserved for site users who want exclusive membership to the Hub. First sign up <a href="/users/sign-up">here</a> before trying to join the club.</p>
<% } %>

<% if (errors) { %>
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }); %>
    </ul>
  <% } %>
