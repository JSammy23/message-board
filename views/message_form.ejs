<h1><%= title %></h1>

<form action="" method="post" >
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" required value="<% message ? message.title : '' %>" >
    </div>
    <div class="form-group">
        <textarea name="body" id="body" cols="50" rows="10" required placeholder="Compose your message here..."><%= message ? message.body : '' %></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" >Submit</button>
    </div>
</form>